# frontend/Dockerfile
FROM node:18-alpine

WORKDIR /app

# Копируем package.json
COPY package*.json ./

# Отключаем любые скрипты postinstall и устанавливаем зависимости
RUN npm ci --only=production --no-optional --ignore-scripts

# Копируем исходный код
COPY . .

# Собираем приложение (если нужно)
RUN npm run build

# Устанавливаем serve для раздачи статики
RUN npm install -g serve

EXPOSE 3000

# Запускаем приложение
CMD ["serve", "-s", "build", "-l", "3000"]